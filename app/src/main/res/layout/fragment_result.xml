<?xml version="1.0" encoding="utf-8"?>

<!-- res/layout/fragment_product_info.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/barcode_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter barcode"
        android:inputType="number" />

    <EditText
        android:id="@+id/serving_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter serving size"
        android:inputType="number" />

    <Button
        android:id="@+id/fetch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Product Info" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/product_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calories: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/product_fat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fat: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/product_protein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Protein: "
        android:textSize="18sp" />

</LinearLayout>
