<?xml version="1.0" encoding="utf-8"?>

<!-- res/layout/fragment_product_info.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- User input for UPC -->
    <EditText
        android:id="@+id/barcode_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter barcode"
        android:inputType="number" />

    <Button
        android:id="@+id/fetch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Product Info" />

    <!-- Display the product name -->
    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name: "
        android:textSize="18sp"
        android:paddingBottom="60dp"/>

    <!-- Serving size input -->
    <EditText
        android:id="@+id/serving_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter serving size (g)"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Nutrients" />

    <TextView
        android:id="@+id/product_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calories: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/product_fat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fat: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/product_protein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Protein: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/product_carbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carbohydrates: "
        android:textSize="18sp"
        android:paddingBottom="80dp"/>

    <Button
        android:id="@+id/update_daily_log_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input into Daily Log"
        android:layout_gravity="center"/>

</LinearLayout>
